rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isStudent() {
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'student';
    }
    
    function isTrainer() {
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'trainer';
    }

    // Users
    match /users/{userId} {
      // ANY signed in user can read ANY user's profile (less strict)
      allow read: if isSignedIn();
      
      // Users can only write to their own document
      allow write: if isSignedIn() && request.auth.uid == userId;

      // Credit Transactions sub-collection
      match /credit_transactions/{transactionId} {
        // ANY signed in user can access ANY transaction history for now (less strict)
        allow read, list: if isSignedIn();
        // Students can't create their own transactions, only backend can
        allow create: if false; 
      }
    }

    // Submissions
    match /submissions/{submissionId} {
       // Trainers can list all submissions from their students, students can only list their own.
      allow list: if (isTrainer() && resource.data.trainerId == request.auth.uid) || (isStudent() && resource.data.studentId == request.auth.uid);
      // ANY signed in user can read ANY submission (less strict)
      allow read: if isSignedIn();
      // Students can create submissions
      allow create: if isStudent();
      // Students can update their own submissions (e.g. to add evaluation type)
      // Trainers can update submissions of their students (e.g. to add feedback)
      allow update: if (isStudent() && request.auth.uid == resource.data.studentId) || (isTrainer() && request.auth.uid == resource.data.trainerId);

      // Feedback Thread sub-collection
      match /feedback_thread/{messageId} {
         // Allow read/write for associated student or trainer
        allow read, write: if isSignedIn() && (request.auth.uid == resource.data.studentId || request.auth.uid == resource.data.trainerId);
      }
    }

    // Tests
    match /tests/{testId} {
      // ANY signed in user can read ANY test (less strict)
      allow read: if isSignedIn();
      // Only trainers can manage tests
      allow write: if isTrainer();
    }
    
    // Plans
    match /plans/{planId} {
      // ANY signed in user can read ANY plan (less strict)
      allow read: if isSignedIn();
      // Only trainers can manage plans
      allow write: if isTrainer();
    }
    
    // Notifications
    match /notifications/{notificationId} {
      // Users can only read/list their own notifications
      allow read, list: if isSignedIn() && request.auth.uid == resource.data.recipientId;
    }
    
    // Email Queue - only backend access
     match /email_queue/{emailId} {
      allow read, write: if false;
    }

    // Collection group query for sales data
    match /{path=**}/credit_transactions/{transactionId} {
      // Trainers can query transactions where their ID is present
      allow read, list: if isTrainer() && resource.data.trainerId == request.auth.uid;
    }
  }
}
