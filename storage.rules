
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Avatars: Users can only read and write their own avatar.
    // The path includes the user's UID and the filename.
    match /avatars/{userId}/{fileName} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Test Images: Only authenticated users (trainers) can write to their own folder within test_images.
    // Anyone can read the test images as they are part of public test questions.
    match /test_images/{userId}/{fileName} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}

    