rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access for all files. 
    // Logos need to be public for anyone to see.
    match /{allPaths=**} {
      allow read;
    }

    // Allow authenticated trainers to write to their own logo path.
    // The path is logos/{trainerId}/logo
    match /logos/{userId}/{fileName} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
     // Allow authenticated trainers to write to their own avatar path.
    match /avatars/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow authenticated trainers to upload test images.
    match /test_images/{userId}/{allPaths=**} {
        allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
